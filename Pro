

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $KANNADIGA_REPO == "KANNADIGABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1BST0JPWS1PUC9QUk8tVVNFUkJPVC9hcmNoaXZlL1Byby56aXA=" | base64 -d
    elif [[ $KANNADIGA_REPO == "KANNADIGABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1BST0JPWS1PUC9QUk8tVVNFUkJPVC9hcmNoaXZlL1Byby56aXA=" | base64 -d
    elif [[ $KANNADIGA_REPO =~ $regex ]]
    then
        if [[ $KANNADIGA_REPO_BRANCH ]]
        then
            echo "${KANNADIGA_REPO}/archive/${KANNADIGA_REPO_BRANCH}.zip"
        else
            echo "${KANNADIGA_REPO}/archive/KANNADIGA.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1BST0JPWS1PUC9QUk8tVVNFUkJPVC9hcmNoaXZlL1Byby56aXA=" | base64 -d
    fi
}


_KANNADIGA_bot () {
    local zippath
    zippath="KANNADIGA.zip"
    echo "  üî∞ Downloading KANNADIGA LegendBot Source Code... üî∞"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  üìçUnpacking Data...üìç"
    KANNADIGAPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " üèÖ Download Complete Now Installing üèÖ"
    echo "  ‚ú® INSTALLING KANNADIGA LEGENDBOT ‚ú®"
    rm -rf "$zippath"
    sleep 5
    cd $KANNADIGAPATH
    echo "    ‚öúÔ∏èStarting KANNADIGA L√™…†√™…≥ÃÉd·∫û√∏t‚öúÔ∏è     "
    echo " ‚ô•Ô∏è NOW WAIT 3 MIN INSTALLING ALL PLUGIN ‚ô•Ô∏è"

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_KANNADIGA_bot
